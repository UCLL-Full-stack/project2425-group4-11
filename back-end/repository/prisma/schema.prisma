generator client {
    provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Event {
    id          Int       @id @default(autoincrement())
    title       String
    genre       String
    time        String   
    date        DateTime
    duration    Int
    description String
    status      String
    tickets     Ticket?
}

model Artist {
    id              Int       @id @default(autoincrement())
    artistName      String      
    password        String
    genres          String[]
    biography       String
    bookingFee      Int 
    socialMedia     String[]
    email           String
    role            String
}

model ConcertHall {
    id              Int         @id @default(autoincrement())
    location        String
    capacity        Int
    name            String
    facilities      String[]
    contactInfo     ContactInfo @relation(fields: [contactInfoId], references: [id])
    contactInfoId   Int         @unique
}

model ContactInfo {
    id              Int             @id @default(autoincrement())
    email           String
    countryCode     String
    number          String
    instagram       String
    concertHall     ConcertHall?    @relation
}

model Ticket {
    id                      Int       @id @default(autoincrement())
    type                    String
    status                  String
    price                   Int
    event                   Event     @relation(fields: [eventId], references: [id])
    eventId                 Int       @unique
}

model User {
    id              Int       @id @default(autoincrement())
    email           String
    password        String
    firstName       String
    lastName        String
    username        String
    phoneNumber     String
    accountStatus   Boolean
    role            String
}

enum Role {
    ADMIN
    USER
    ARTIST
}